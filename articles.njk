<section id="articles">
  <h1>Articles</h1>

  <div class="grid cols-3" role="list">
  {% for item in collections.articles | reverse %}
    <article class="card" role="listitem">
      <h3>{{ item.data.title }}</h3>
      {% if item.data.publisher %}<p class="muted">{{ item.data.publisher }}</p>{% endif %}
      <p class="muted">
        {% if item.data.excerpt %}
          {{ item.data.excerpt | striptags | truncate(150, true, '…') }}
        {% else %}
          {{ '' | truncate(0) }}
        {% endif %}
      </p>
      <p><a class="btn" href="{{ item.data.url }}" target="_blank" rel="noopener noreferrer">Lire sur le site</a></p>
    </article>
  {% endfor %}
  </div>
</section>
