<section class="contact" aria-labelledby="contact-title">
  <h2 id="contact-title">Contactez-moi</h2>
  <form name="contact" method="POST" data-netlify="true">
    <input type="hidden" name="form-name" value="contact">

    <p>
      <label for="name">Votre nom :</label><br>
      <input type="text" id="name" name="name" placeholder="Entrez votre superbe prénom" required>
    </p>

    <p>
      <label for="email">Votre email :</label><br>
      <input type="email" id="email" name="email" placeholder="exemple@email.com" required>
    </p>

    <p>
      <label for="message">Message :</label><br>
      <textarea id="message" name="message" rows="6" placeholder="Écrivez ici votre plus belle demande ✍️"></textarea>
    </p>

    <p>
      <label>
        <input type="checkbox" name="privacy" required>
        J’accepte la <a href="/privacy.html">politique de confidentialité</a>
      </label>
    </p>

    <p>
      <button type="submit" class="btn">Envoyer 🚀</button>
    </p>
  </form>
</section>

<style>
  form input[type="text"],
  form input[type="email"],
  form textarea {
    width: 100%;
    max-width: 500px;
    padding: 12px;
    margin-top: 6px;
    border: 2px solid #ccc;
    border-radius: 6px;
    background: #fff;
    color: #000;
    font-size: 1rem;
  }

  form textarea {
    min-height: 150px;
  }

  form input::placeholder,
  form textarea::placeholder {
    color: #888;
    font-style: italic;
  }

  .btn {
    background: #00aaff;
    color: #fff;
    border: none;
    padding: 12px 24px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
  }

  .btn:hover {
    background: #008ecc;
  }
</style>
