<section class="contact" aria-labelledby="contact-title">
  <h1 id="contact-title">Contactez-moi</h1>

  <form name="contact"
        method="POST"
        data-netlify="true"
        data-netlify-recaptcha="true"
        netlify-honeypot="bot-field"
        action="/merci.html">

    <input type="hidden" name="form-name" value="contact" />

    <p hidden><label>Ne pas remplir : <input name="bot-field" /></label></p>

    <p>
      <label for="name">Votre nom :</label><br>
      <input id="name" name="name" type="text" required
             placeholder="Entrez votre superbe prénom">
    </p>

    <p>
      <label for="email">Votre email :</label><br>
      <input id="email" name="email" type="email" required
             placeholder="exemple@email.com">
    </p>

    <p>
      <label for="message">Message :</label><br>
      <textarea id="message" name="message" rows="6" required
                placeholder="Écrivez ici votre plus belle demande ✍️"></textarea>
    </p>

    <p class="consent">
      <label>
        <input type="checkbox" name="consent" required>
        J’accepte la <a href="/privacy.html">politique de confidentialité</a>
      </label>
    </p>

    <p><button class="btn" type="submit">Envoyer</button></p>
  </form>
</section>

<style>
  :focus { outline: 3px solid #2a7fff; outline-offset: 3px; }
  form input[type="text"], form input[type="email"], form textarea {
    width: 100%; max-width: 520px; padding: 12px; margin-top: 6px;
    border: 2px solid #cbd5e1; border-radius: 8px; background:#fff; color:#000; font-size:1rem;
  }
  form textarea { min-height: 150px; }
  form input::placeholder, form textarea::placeholder { color:#667085; font-style: italic; }
  .consent input[type="checkbox"] { width:18px; height:18px; accent-color:#2a7fff; margin-right:6px; }
</style>

