<section id="contact">
  <h2>Parler de votre projet</h2>
  <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="card" aria-label="Formulaire de contact">
    <input type="hidden" name="form-name" value="contact" />
    <p class="sr-only"><label>Ne pas remplir <input name="bot-field" /></label></p>
    <p><label>Nom<br/><input name="name" required style="width:100%;padding:10px;border-radius:8px;border:1px solid var(--border);background:#0b1220;color:var(--txt)" /></label></p>
    <p><label>Email<br/><input name="email" type="email" required style="width:100%;padding:10px;border-radius:8px;border:1px solid var(--border);background:#0b1220;color:var(--txt)" /></label></p>
    <p><label>Message<br/><textarea name="message" rows="6" required style="width:100%;padding:10px;border-radius:8px;border:1px solid var(--border);background:#0b1220;color:var(--txt)"></textarea></label></p>
    <p><button class="btn" type="submit">Envoyer</button></p>
  </form>
</section>



